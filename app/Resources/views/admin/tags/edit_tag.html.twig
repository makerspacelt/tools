{% extends 'admin/base_panel.html.twig' %}

{% block title %}{{ parent() }} - Edit tag{% endblock %}

{% block page_content %}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-tag"></i>
        <i class="far fa-edit"></i>
        {% block card_title %}Edit tag{% endblock %}
    </div>
    <div class="card-body">
        <div class="col-md-5">
            <form action="{{ path('admin_edit_tag') }}" method="post">
                <input type="text" class="form-control" placeholder="Input a tag" name="tag" value="{{ tag }}" required>
                <div class="row">
                    <div class="col mt-2">
                        <a href="{{ path('admin_tags') }}" class="btn btn-secondary">Back</a>
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
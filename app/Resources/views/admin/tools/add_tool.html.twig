{% extends 'admin/base_panel.html.twig' %}

{% block title %}{{ parent() }} - Add tool{% endblock %}

{% block style_links %}
    {{ parent() }}
    <!-- jQuery Tags Input Revisited Plugin -->
    <link href="/vendor/tagsinput-revisited/jquery.tagsinput-revisited.css" rel="stylesheet">
{% endblock %}

{% block script_links %}
    {{ parent() }}
    <!-- jQuery Tags Input Revisited Plugin -->
    <script src="/vendor/tagsinput-revisited/jquery.tagsinput-revisited.js"></script>

{% endblock %}

{% block page_content %}
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-toolbox"></i>
            <i class="far {% block icon %}fa-plus-square{% endblock %}"></i>
            {% block card_title %}Add new tool{% endblock %}
        </div>
        <div class="card-body">
            <form action="{% block form_action %}{{ path('admin_add_tool') }}{% endblock %}" method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Main information
                        </h5>
                        <div class="col-md-7">
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" name="tool_name" placeholder="Tool name" value="{{ tool.getName() | default('') }}" required>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" name="tool_model" placeholder="Tool model" value="{{ tool.getModel() | default('') }}" required>
                                </div>
                            </div>
                            {% if code is not defined %}
                                {% set code = tool.getCode() %}
                            {% endif %}
                            <input type="text" class="form-control mt-3" name="tool_code" placeholder="Tool code" value="{{ code | default('') }}" required>
                            <textarea name="tool_description" class="form-control mt-3" placeholder="Tool description" required>{{ tool.getDescription() | default('') }}</textarea>
                            <input type="file" name="tool_photos" class="form-control mt-3" placeholder="Tool photo">
                            <div class="mt-3">
                                <input class="form-control tagsinput" id="tool_tagsinput" name="tool_tags" value="{{ tags | default('') | join(",")}}" placeholder="Tool tags">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            Additional information
                        </h5>
                        <div class="col-md-7">
                            <textarea name="tool_links" class="form-control mt-3" placeholder="Where to buy?">{{ tool.getShopLinks() | default('') }}</textarea>
                            <div class="row mt-3">
                                <div class="col">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="tool_price" value="{{ tool.getOriginalPrice() | default('') }}" placeholder="Original price">
                                        <div class="input-group-append">
                                            <div class="input-group-text">&euro;</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <input type="date" class="form-control" name="tool_date" value="{{ tool.getAcquisitionDate() | default('') }}" placeholder="Bought when?">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            Tool parameters
                        </h5>
                        <div class="col-md-7">
                            {% set n = 0 %}
                            {% if params is defined %}
                                {% for param in params %}
                                    <div class="input-group form-group tool_param_group">
                                        <input type="text" class="form-control" id="tool_name" name="tool_param[{{ n }}][name]" value="{{ param.getName() }}" placeholder="Parameter">
                                        <input type="text" class="form-control" id="tool_value" name="tool_param[{{ n }}][value]" value="{{ param.getValue() }}" placeholder="Value">
                                        <div class="input-group-append">
                                            <button class="btn btn-danger btn-remove-param" type="button"><i class="fas fa-minus"></i></button>
                                        </div>
                                    </div>
                                    {% set n = n + 1 %}
                                {% endfor %}
                                {% set n = n + 1 %}
                            {% endif %}
                            <div class="input-group form-group tool_param_group">
                                <input type="text" class="form-control" id="tool_name" name="tool_param[{{ n }}][name]" placeholder="Parameter">
                                <input type="text" class="form-control" id="tool_value" name="tool_param[{{ n }}][value]" placeholder="Value">
                                <div class="input-group-append">
                                    <button class="btn btn-success btn-add-param" type="button"><i class="fas fa-plus"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            Repair log
                        </h5>
                        <div class="col-md-7">
                            {% if logs is defined %}
                                {% for log in logs %}
                                    <div class="input-group form-group tool_log">
                                        <textarea name="tool_repair_log[]" class="form-control" placeholder="Tool repair log">{{ log.getLog() }}</textarea>
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-danger btn-remove-log"><i class="fas fa-minus"></i></button>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                            <div class="input-group form-group tool_log">
                                <textarea name="tool_repair_log[]" class="form-control" placeholder="Tool repair log"></textarea>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-success btn-add-log"><i class="fas fa-plus"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col mt-2">
                        <a href="{{ path('admin_tools') }}" class="btn btn-secondary">Back</a>
                        {% block input_params %}{% endblock %}
                        <input type="submit" class="btn btn-primary" value="{% block submit_btn_name %}Create{% endblock %}">
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
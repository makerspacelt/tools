{% extends 'admin/base_panel.html.twig' %}

{% block title %}{{ parent() }} - Add user{% endblock %}

{% block page_content %}
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas {% block icon %}fa-user-plus{% endblock %}"></i>
            {% block card_title %}Add new user{% endblock %}
        </div>
        <div class="card-body">
            <div class="col-md-5">
                {% for msg in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger py-2" role="alert">
                        {{ msg }}
                    </div>
                {% endfor %}
                {{ form_start(form) }}
                    {{ form_label(form.fullname) }}
                    {{ form_widget(form.fullname) }}

                    {% if not is_mobile() %}
                    <div class="row">
                        <div class="col">
                    {% endif %}
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                    {% if not is_mobile() %}
                        </div>
                        <div class="col">
                    {% endif %}
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password) }}
                    {% if not is_mobile() %}
                        </div>
                    </div>
                    {% endif %}

                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}

                    {{ form_label(form.roles) }}
                    {{ form_widget(form.roles) }}

                    <div class="row">
                        <div class="col">
                            <a href="{{ path('admin_users') }}" class="btn btn-secondary">Back</a>
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
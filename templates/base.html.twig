<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}{{ include('admin/base_name.twig') }}{% endblock %}</title>
    <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    
    <!-- Custom font for this template-->
    <link href="{{ asset('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a href="{{ path('index_page') }}">
                <div class="navbar-brand">
                    <img src="{{ asset('img/ms-logo.png') }}" width="30" height="30" alt="logo">
                    {% block navbar_title %}{{ include('admin/base_name.twig') }}{% endblock %}
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="languagedropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% trans %} Language {% endtrans %}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="languagedropdown">
                            <a class="dropdown-item" href="{{ path('change_lang', {'locale': 'en'}) }}">{% trans %} English {% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path('change_lang', {'locale': 'lt'}) }}">{% trans %} Lithuanian {% endtrans %}</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link" href="{{ url('admin_homepage') }}">{% trans %} Admin panel {% endtrans %}</a>
                        {% elseif not app.user %}
                            <a class="nav-link" href="{{ path('login') }}">{% trans %} Login {% endtrans %}</a>
                        {% endif %}
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('logout') }}">{% trans %} Logout {% endtrans %}</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <!-- PaieÅ¡ka -->
                {# <div class="card my-4">
                    <h5 class="card-header">{% trans %} Search {% endtrans %}</h5>
                    <div class="card-body">
                        <form method="post" action="{{ path('search_tools') }}">
                            <div class="input-group">
                                <input id="search" type="text" name="search_str" class="form-control" placeholder="{% trans %} Looking for.. {% endtrans %}" value="{{ search_str | default('') }}" autofocus>
                                <div class="input-group-append">
                                    <input type="submit" value="{% trans %} Search {% endtrans %}" class="btn btn-secondary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div> #}

                {% block tags %}
                    {{ render(controller('App\\Controller\\TagsController::tagsList')) }}
                {% endblock %}
                {% if app.user %}
                    {% block functions %}
                    {% endblock %}
                {% endif %}
            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9 my-4">
                {% if app.user and 'ROLE_SUPERADMIN' in app.user.roles %}
                    <div class="card mb-2">
                        <div class="card-body">
                            {% block admin_panel %}{% endblock %}
                        </div>
                    </div>
                {% endif %}
                {% block main_block %}{% endblock %}
                <!-- /.row -->
            </div>
            <!-- /.col-lg-9 -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('js/main.js') }}"></script>

</body>
</html>

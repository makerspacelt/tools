<div class="card my-4">
    <h5 class="card-header">Etiketės</h5>
    <div class="my-2 mx-3">
        {% if tags is not empty %}
            <form method="post" action="{{ path('filter_by_tags') }}{% if is_mobile() %}#content{% endif %}">
                <div class="container tag-section">
                    {% for tag in tags %}
                        <div class="custom-control custom-checkbox pl-3">
                            <input type="checkbox" class="custom-control-input" name="tags[]" id="{{ tag.getId() }}" value="{{ tag.getTag() }}" />
                            <label class="custom-control-label" for="{{ tag.getId() }}">
                                <a href="{{ path('filter_by_single_tag', {'tag': tag.getTag()}) }}{% if is_mobile() %}#content{% endif %}">#{{ tag.getTag() }}</a>
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <br/>
                <input type="submit" value="Filtruoti" class="btn btn-sm btn-block btn-secondary"/>
            </form>
        {% else %}
            Etikečių kol kas nėra
        {% endif %}
    </div>
</div>
